<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="ThStarterPlugin\Service\CustomFieldsInstaller">
            <argument type="service" id="custom_field_set.repository"/>
            <argument type="service" id="custom_field_set_relation.repository"/>
        </service>

        <service id="ThStarterPlugin\Service\EmailService">
            <argument type="service" id="Shopware\Core\Content\Mail\Service\MailService"/>
        </service>

        <service id="ThStarterPlugin\Storefront\Controller\ExampleController" public="true">
            <argument type="service" id="ThStarterPlugin\Service\EmailService"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <call method="setTwig">
                <argument type="service" id="twig"/>
            </call>
        </service>

    </services>
</container>